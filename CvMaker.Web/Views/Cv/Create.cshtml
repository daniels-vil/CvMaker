@using CvMaker.Core.Enums
@model CvMaker.Web.Models.CvItemModel

@{
    ViewData["Title"] = "Create";
}



<hr />
<div class="create_wrapper">
    <div class="create_cv_content">
        <div class="create_cv_title">
            <h1>Lets begin!</h1>
        </div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Jane"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" placeholder="Doe"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="jane.doe@gmail.com" type="email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OtherName" class="control-label">Other Name</label>
                <input asp-for="OtherName" class="form-control"/>
                <span asp-validation-for="OtherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="example: +371 00000000"/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address.Country" class="control-label">Country</label>
                <input asp-for="Address.Country" class="form-control" id="address.country"  placeholder="Moroco"/>
            </div>

            <div class="create_button_wrapper">
                <input type="submit" value="Next step" class="btn btn-unique_create"/>
            </div>
        </form>
    </div>
</div>



